@model Appointment

<h2>Tạo lịch hẹn mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="PatientName">Tên bệnh nhân</label>
        <input type="text" class="form-control" id="PatientName" name="PatientName" required>
    </div>
    @{
        // Tạo danh sách tùy chọn giờ hẹn trực tiếp trong Razor View
        var appointmentTimeSlots = new List<SelectListItem>
    {
    new SelectListItem { Value = "7-11", Text = "7:00 AM - 11:00 AM" },
    new SelectListItem { Value = "14-17", Text = "2:00 PM - 5:00 PM" },
    new SelectListItem { Value = "19-21", Text = "7:00 PM - 9:00 PM" }
    // Các tùy chọn giờ khác có thể thêm vào đây
    };
    }

    <div class="form-group">
        <label for="AppointmentTimeSlot">Chọn khung giờ hẹn</label>
        <select class="form-control" id="AppointmentTimeSlot" name="AppointmentTimeSlot" required>
            <option value="">Chọn khung giờ</option>
            @foreach (var item in appointmentTimeSlots)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
    </div>


    <div class="form-group">
        <label for="BacSiId">Chọn bác sĩ</label>
        <select class="form-control" id="BacSiId" name="BacSiId" asp-items="ViewBag.BacSis" required></select>
    </div>
    <button type="submit" class="btn btn-primary">Đặt lịch</button>
</form>
 